<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="si.uni_lj.fri.taskyapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <ViewSwitcher
        android:id="@+id/start_sensing_view_switcher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_complexity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose complexity of your activity during the next 10 seconds."/>

            <RelativeLayout
                android:id="@+id/task_complexity_frame"
                android:layout_below="@id/tv_complexity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <com.rey.material.widget.Slider
                    android:id="@+id/task_complexity_slider"
                    style="@style/Material.Widget.Slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:sl_minValue="1"
                    app:sl_stepValue="1"
                    app:sl_discreteMode="true"
                    app:sl_textSize="20sp"
                    app:sl_maxValue="5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:background="@drawable/circle_shape" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:background="@drawable/circle_shape" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:background="@drawable/circle_shape" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:background="@drawable/circle_shape" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:background="@drawable/circle_shape" />
                    </FrameLayout>

                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_below="@id/task_complexity_frame"
                android:id="@+id/start_sensing_after_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start sensing after:"/>
            <RadioGroup
                android:id="@+id/radio_group_time"
                android:layout_below="@id/start_sensing_after_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5s"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15s" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30s" />
                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60s" />

            </RadioGroup>
            <LinearLayout
                android:id="@+id/layout_start_sensing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_below="@id/radio_group_time">
                <Button
                    android:id="@+id/btn_start_sensing"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Start sensing"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensing will start after countdown completes. Sensing will last for 10 seconds." />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/countdown_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/countdown_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cpb_background_progressbar_color="@color/divider"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progressbar_color="@color/accent"
                    app:cpb_progressbar_width="12dp" />

            </FrameLayout>

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensing will start after countdown completes." />

            <Button
                android:id="@+id/btn_finished_sensing"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:text="@string/back"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </ViewSwitcher>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_gravity="top|center_horizontal"/>
        <Button
            android:id="@+id/btn_label_data"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:text="Label sensed data"
            android:layout_alignParentBottom="true"/>
    </FrameLayout>


</LinearLayout>
