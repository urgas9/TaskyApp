<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="si.uni_lj.fri.taskyapp.LabelTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:text="@string/detected_phone_activity"
            android:layout_width="0dp"
            android:gravity="center_vertical|start"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_detected_activity"
            android:layout_width="0dp"
            android:gravity="center_vertical|end"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:layout_weight="2"
            android:text="@string/nearby_devices"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_num_bt_devices"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|end"
                android:textColor="@color/primary_text"
                android:paddingRight="4dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_bt_icon"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_bluetooth_black_18dp"
                android:layout_height="18dp"
                android:scaleType="fitCenter"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_num_wifi_devices"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|end"
                android:textColor="@color/primary_text"
                android:paddingRight="4dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_wifi_icon"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_network_wifi_black_18dp"
                android:layout_height="18dp"
                android:scaleType="fitCenter"/>
        </LinearLayout>

    </LinearLayout>
    <fragment
        class="com.google.android.gms.maps.MapFragment"
        android:name="si.uni_lj.fri.taskyapp.LabelTaskActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/map_fragment"
        app:cameraZoom="13.5"
        android:layout_weight="4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <com.github.channguyen.rsv.RangeSliderView
            android:id="@+id/rsv_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:filledColor="@color/primary"
            app:emptyColor="@color/divider"
            app:rangeCount="5"
            app:barHeightPercent="0.05"
            />

        <!--<Button
            android:id="@+id/btn_discard_task"
            android:layout_width="0dp"
            android:background="@color/red"
            android:text="@string/discard"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/spinner_label_task"
            android:layout_width="0dp"
            android:text="@string/label"
            android:background="@color/green"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:entries="@array/task_complexities_array"
            android:prompt="@string/complexity_prompt"
            android:layout_weight="1"/>-->
    </LinearLayout>
</LinearLayout>
