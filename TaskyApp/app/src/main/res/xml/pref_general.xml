<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <PreferenceCategory
        android:icon="@drawable/ic_info_black_24dp"
        android:title="@string/pref_header_general">
        <!--<EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_display_name"
            android:inputType="textCapWords"
            android:key="profile_name_text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_display_name"/>-->
        <EditTextPreference
            android:defaultValue="@string/pref_default_email_name"
            android:inputType="textEmailAddress"
            android:key="profile_email_text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_email"/>

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/participate_labels_array"
            android:entryValues="@array/participate_value_array"
            android:key="participate_preference"
            android:title="How actively do you want to participate in this research?"/>

    </PreferenceCategory>
    <PreferenceCategory
        android:icon="@drawable/ic_notifications_black_24dp"
        android:title="@string/pref_header_notifications">
        <!-- A 'parent' preference, which enables/disables child preferences (below)
             when checked/unchecked. -->
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/notifications_labels_array"
            android:entryValues="@array/notifications_value_array"
            android:key="notifications_preference"
            android:title="How often do you want to be notified?"/>

        <!-- Allows the user to choose a ringtone in the 'notification' category. -->
        <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
        <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
        <RingtonePreference
            android:defaultValue="content://settings/system/notification_sound"
            android:key="notifications_new_message_ringtone"
            android:ringtoneType="notification"
            android:title="@string/pref_title_ringtone"/>

        <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
        <SwitchPreference
            android:defaultValue="true"
            android:key="notifications_new_message_vibrate"
            android:title="@string/pref_title_vibrate"/>
    </PreferenceCategory>


</PreferenceScreen>
